{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "@zalari/ngx-grid",
  "description": "A grid system for Angular.",
  "version": "0.0.1",
  "publishConfig": {
    "access": "public"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "./src/public_api.ts"
    },
    "whitelistedNonPeerDependencies": [
      "angular",
      "classlist.js",
      "rxjs",
      "zone.js"
    ]
  },
  "scripts": {
    "build": "ng-packagr -p package.json && cpx -p README.md dist",
    "lint:sass": "sass-lint --verbose --no-exit --config ./sass-lint.yml",
    "lint:ts": "tslint --force --config ./tslint.yml --project ./tsconfig.json",
    "lint": "npm run lint:ts && npm run lint:sass"
  },
  "author": "Zalari <info@zalari.de>",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/compiler-cli": "^6.0.0",
    "@angular/core": "^6.0.0",
    "classlist.js": "^1.1.20150312",
    "rxjs": "^6.0.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "codelyzer": "4.3.0",
    "ng-packagr": "3.0.1",
    "rxjs-tslint": "0.1.4",
    "rxjs-tslint-rules": "4.4.1",
    "sass-lint": "1.12.1",
    "tsickle": "0.29.0",
    "tslint": "5.10.0",
    "typescript": "2.7.2"
  }
}

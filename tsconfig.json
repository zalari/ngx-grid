{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@zalari/ngx-grid": [ "./public_api.ts" ]
    }
  },
  "angularCompilerOptions": {
    "paths": {
      "@zalari/ngx-grid": [ "./public_api.ts" ]
    }
  },
  "include": [
    "./src/polyfills.ts"
  ],
  "exclude": [
    ".ng_build"
  ]
}
